<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    >

        <ImageView
            android:id="@+id/draw_albumcover_full"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher"
            android:layout_weight="5"/>

        <TextView
            android:id="@+id/tv_artistName_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:minHeight="24sp"
            android:paddingTop="8sp"/>
        <TextView
            android:id="@+id/tv_albumName_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:minHeight="20sp" />
        <!-- Publisher      Year-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".5">
            <TextView
                android:id="@+id/tv_publisher_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="3"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_year_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:layout_gravity="right" />
        </LinearLayout>

        <TextView
                android:id="@+id/tv_genre_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight=".5">
                <TextView
                    android:id="@+id/tv_static_track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15sp"
                    android:text="@string/TrackInfo"/>
                <TextView
                    android:id="@+id/tv_trackAmt_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout> <!--End Track Layout-->

</LinearLayout>
