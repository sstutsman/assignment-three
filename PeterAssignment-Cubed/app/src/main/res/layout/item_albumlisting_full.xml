<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >
            <ImageView
                android:id="@+id/draw_albumcover_full"
                android:layout_width="323dp"
                android:layout_height="213dp"
                android:maxHeight="80dp"
                android:maxWidth="80dp" />

            <TextView
                android:id="@+id/tv_artistName_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_headline_material"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:minHeight="24sp"
                android:paddingTop="8sp"
                android:textIsSelectable="false" />
            <TextView
                android:id="@+id/tv_albumName_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:minHeight="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Publisher      Year-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_publisher_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="3"/>
            <TextView
                android:id="@+id/tv_year_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_genre_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_static_track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TrackInfo"/>
                <TextView
                    android:id="@+id/tv_trackAmt_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                </LinearLayout> <!--End Track Layout-->
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
