<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Black">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:background="@drawable/dark_moon"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_weight="2"
        android:paddingLeft="10dp"
        android:text="@string/album_starter_string"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/LimeGreen" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="@+id/textView3"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="Dark Side Of The Moon\nPink Floyd\n\n15\n\n1973\n\nAbbey Road Studios\n\nMoney\n\n42:59min"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/LimeGreen" />

</RelativeLayout>