<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_gray"
    android:orientation="vertical"
    tools:context="com.duranovic.albumapp.OnClickActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/gradient_gray"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_onclick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="14dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Dummy Album\nDummy Artist\nTracksNumber\nDummy Pub"
                android:textColor="#B26200"
                android:textSize="16sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_art_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avenged_sevenfold" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/tv_tracks_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@drawable/gradient_gray"
        android:textColor="#B26200"
        android:textSize="18sp"
        android:text="test"
        />

</LinearLayout>
